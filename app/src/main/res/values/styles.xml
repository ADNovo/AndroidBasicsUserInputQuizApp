<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#37474F</item>
        <item name="colorPrimaryDark">#263238</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Question Title Text View style -->
    <style name="QuestionTitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#263238</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Question Text View style -->
    <style name="QuestionTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#263238</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Answer Edit Text style -->
    <style name="AnswerEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColorHint">#263238</item>
        <item name="android:inputType">number</item>
    </style>

    <!-- Answer Check Box style -->
    <style name="AnswerCheckBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#263238</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <!-- Radio Group style -->
    <style name="AnswerRadioGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Radio Button style -->
    <style name="AnswerRadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#263238</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>
</resources>
